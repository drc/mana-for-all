---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="description"
            content="Quick not complicated MTG Mana Calculator"
        />
        <meta
            name="viewport"
            content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0"
        />
        <link
            rel="icon"
            type="image/svg+xml"
            href="/mana-for-all/favicon.svg"
        />
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/regular.min.css"
            integrity="sha512-TzeemgHmrSO404wTLeBd76DmPp5TjWY/f2SyZC6/3LsutDYMVYfOx2uh894kr0j9UM6x39LFHKTeLn99iz378A=="
            crossorigin="anonymous"
            referrerpolicy="no-referrer"
        />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <link
            href="https://cdn.jsdelivr.net/npm/mana-font@latest/css/mana.css"
            rel="stylesheet"
            type="text/css"
        />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Yatra+One&display=swap"
            rel="stylesheet"
        />
    </head>
    <body>
        <slot />
    </body>
</html>
<style is:global>
    :root {
        --text: #212227;
        --background: #f7c59f;
        --accent: #ff6b35;
    }
    html,
    body {
        margin: 0;
        height: 100%;
    }
    html {
        font-family:
            system-ui,
            -apple-system,
            BlinkMacSystemFont,
            "Segoe UI",
            Roboto,
            Oxygen,
            Ubuntu,
            Cantarell,
            "Open Sans",
            "Helvetica Neue",
            sans-serif;
        font-size: 100%;
    }
    body {
        display: flex;
        flex-direction: column;
        background: var(--background);
        color: var(--text);
    }
    body.dark {
        --text: #f7c59f;
        --background: #212227;
    }
</style>
